@model MahataCrm.Models.OperatorViewModel

@{
    ViewData["Title"] = "Block";
}

<h1>
    @if (@Model.Status == 0)
    {
        <span>Block</span>
    }
    else
    {
        <span>UnBlock</span>
    }
</h1>

<h3>Are you sure you want to 
    @if (@Model.Status == 0)
    {
        <span>Block</span>
    }
    else
    {
        <span>UnBlock</span>
    }
    this ?
</h3

<h3>Are you sure you want to block/unblock this?</h3>
<div>
    <h4>Operator to block/unblock</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Block">
        <input type="hidden" asp-for="Id" />
        @if (@Model.Status == 0)
        {
            <input type="submit" value="Block" class="btn btn-danger" />
        }
        else
        {
          <input type="submit" value="UnBlock" class="btn btn-danger" />
        }
        | <a asp-action="Index">Back to List</a>
    </form>
</div>
