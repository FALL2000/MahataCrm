@model MahataCrm.Models.SearchAccountModel

@{
    ViewData["Title"] = "Advanced Search Account";
}

<h2>Advanced Search Account</h2>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-action="search">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label class="col-form-label">Search on</label>
                <select id="choice" class="form-control">
                    <option value="Created">Created At</option>
                    <option value="Updated">Updated At</option>
                </select><br />
                <span>Created At</span>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="FromC" class="control-label">From</label>
                    </div>
                    <div class="col-sm-8">
                        <input id="fromCreate" asp-for="FromC" class="form-control" placeholder="Name" />
                        <span asp-validation-for="FromC" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="ToC" class="control-label">To</label>
                    </div>
                    <div class="col-sm-8">
                        <input id="toCreate" asp-for="ToC" class="form-control" placeholder="Name" />
                        <span asp-validation-for="ToC" class="text-danger"></span>
                    </div>
                </div>
                <span>Updated At</span>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="FromU" class="control-label">From</label>
                    </div>
                    <div class="col-sm-8">
                        <input id="fromUpdate" asp-for="FromU" class="form-control" placeholder="Email" disabled/>
                        <span asp-validation-for="FromU" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label asp-for="ToU" class="control-label">To</label>
                    </div>
                    <div class="col-sm-8">
                        <input id="toUpdate" asp-for="ToU" class="form-control" placeholder="Name" disabled/>
                        <span asp-validation-for="ToU" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                        <input type="submit" value="search" class="btn btn-primary" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#choice').change(function () {
                var choice = $('#choice').val();
                console.log(choice);
                if (choice == "Created") {
                    $('#fromCreate').prop('disabled', false);
                    $('#toCreate').prop('disabled', false);
                    $('#fromUpdate').prop('disabled', true);
                    $('#toUpdate').prop('disabled', true);
                } else {
                    $('#fromCreate').prop('disabled', true);
                    $('#toCreate').prop('disabled', true);
                    $('#fromUpdate').prop('disabled', false);
                    $('#toUpdate').prop('disabled', false);
                }
            });
        });
    </script>

}