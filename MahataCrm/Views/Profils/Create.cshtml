@model MahataCrm.Models.Profil

@{
    ViewData["Title"] = "Create";
}

<h1>Profile</h1>

<h4>New Profile</h4>
<hr />
<style>
    /* Style pour réduire la taille des cases à cocher */
    input[type="checkbox"] {
        transform: scale(0.5); /* Réduit la taille de la case à cocher */
        margin-right: 5px; /* Marge à droite pour l'espace entre la case à cocher et le texte */
    }
</style>

<div class="container">
    <form asp-action="Create">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" />   
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>    
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-borderless table-striped" id="items-table" style="{width: 100%;}">
                <span id="error" class="text-danger"></span>
                <thead>
                    <tr>
                        <th width="35%">Module</th>
                        <th>Create</th>
                        <th>Edit</th>
                        <th>Delete</th>
                        <th>View</th>
                        <th>Activate/Desactivate</th>
                        <th>Assign Service Plan</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            Account
                        </td>
                        <td ><input asp-for="isCreateAccount" class="form-control" type="checkbox" /></td>
                        <td ><input asp-for="isUpdateAccount" class="form-control" type="checkbox" /></td>
                        <td ><input asp-for="isDeleteAccount" class="form-control" type="checkbox" /></td>
                        <td><input asp-for="isViewAccount" class="form-control" type="checkbox" /></td>
                        <td><input asp-for="isBlockAccount" class="form-control" type="checkbox" /></td>
                        <td><input asp-for="isAssignServicePlan" class="form-control" type="checkbox" /></td>
                    </tr>
                    <tr>
                        <td>Service Plan</td>
                        <td><input asp-for="isCreateServicePlan" class="form-control" type="checkbox" /></td>
                        <td><input asp-for="isUpdateServicePlan" class="form-control" type="checkbox" /></td>
                        <td><input asp-for="isDeleteServicePlan" class="form-control" type="checkbox" /></td>
                        <td><input asp-for="isViewServicePlan" class="form-control" type="checkbox" /></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-group row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                        <input  type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>