@using System.Reflection
@model IEnumerable<MahataCrm.Models.Receipt>

@{
    ViewData["Title"] = "Index";
}

<h1>Receipt</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create">New Receipt</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">List of Receipt</h6>
        <a class="btn btn-primary" asp-action="search">Advanced Search</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Receipt Number
                        </th>
                        <th>
                            Z Number
                        </th>
                        <th>
                            Receipt Date
                        </th>
                        <th>
                            Total Tax Exclude
                        </th>
                        <th>
                            Total Tax Include
                        </th>
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Payment Type
                        </th>
                        <th>
                            Posted/ No Posted
                        </th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RctNum)
                            </td>
                            @if (!item.isPost)
                            {
                                <td>------</td>    
                            }
                            else
                            {
                                <td>@Html.DisplayFor(modelItem => item.Znum)</td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.RctDate)
                            </td>
                            @if (!item.isPost)
                            {
                                <td>------</td>
                            }
                            else
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalTaxExcl)
                                </td>
                            }
                            @if (!item.isPost)
                            {
                                <td>------</td>
                            }
                            else
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalTaxIncl)
                                </td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.CustName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentType)
                            </td>
                            @if (!item.isPost)
                            {
                                <td>NOT POSTED</td>
                            }
                            else
                            {
                                <td>POSTED</td>
                            }
                            <td><a asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
