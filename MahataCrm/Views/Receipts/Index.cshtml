<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Operator</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Receipt Number
                        </th>
                        <th>
                            Z Number
                        </th>
                        <th>
                            Receipt Date
                        </th>
                        <th>
                            Total Tax Exclude
                        </th>
                        <th>
                            Total Tax Include
                        </th>
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Customer Id Type
                        </th>
                        <th>
                            Customer Id
                        </th>
                        <th>
                            Customer Number
                        </th>  
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RctNum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Znum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RctDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalTaxExcl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalTaxIncl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustIdType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustNum)
                            </td>
                            <td><a asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
